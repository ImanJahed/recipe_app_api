{
    "python.analysis.completeFunctionParens": true,
    "files.autoSave": "afterDelay",
    "[python]": {

        "diffEditor.ignoreTrimWhitespace": false,
        "editor.defaultFormatter": "ms-python.black-formatter",
        "editor.linelength": 100,

        "editor.formatOnType": true,
        "editor.wordBasedSuggestions": "off",
        "editor.tabSize": 4,
        "editor.insertSpaces": true,
        "editor.tabCompletion": "on",
        "editor.autoIndent": "advanced",
        "editor.trimAutoWhitespace": true,
        "files.trimTrailingWhitespace": true,
        "editor.formatOnSave": true,
        "editor.autoClosingBrackets": "always",
        "editor.codeActionsOnSave": {
            "source.fixAll": "explicit",
            "source.organizeImports": "explicit"
          },

    },

    "flake8.args": ["--max-line-length=89"],

    "workbench.iconTheme": "material-icon-theme",


    "files.associations": {
        "**/*.html": "html",
        "**/templates/*/*.html": "django-html",
        "**/templates/*": "django-txt",
        "**/requirements{/**,*}.{txt,in}": "pip-requirements"
     },

     "emmet.includeLanguages": {
        "django-html": "html"
     },

     "beautify.language": {
        "html": [
            "htm",
            "html",
            "django-html"
        ],

     },
     "[django-html]": {
        "editor.defaultFormatter": "HookyQR.beautify",
        "editor.formatOnSave": true,
        "editor.tabSize": 4,

      },

    "code-runner.clearPreviousOutput": true,
    "prettier.bracketSameLine": true,
    "prettier.printWidth": 100,
    "prettier.requireConfig": true,
    "highlight-matching-tag.highlightFromContent": true,
    "highlight-matching-tag.highlightSelfClosing": true,
    "editor.semanticTokenColorCustomizations": {
        "[Bluloco Dark Italic]": {
            "rules": {
                // "property": "#fff"
            }
        }
    },
    "workbench.colorTheme": "Electron vue darker",
    "[plaintext]": {

        "editor.unicodeHighlight.ambiguousCharacters": false,
        "editor.unicodeHighlight.invisibleCharacters": false
    },
    "python.defaultInterpreterPath": "C:\\Users\\I.MaN\\AppData\\Local\\Programs\\Python\\Python311",
    "notebook.diff.overviewRuler": true,
    "notebook.formatOnSave.enabled": true,

    "notebook.output.scrolling": true,
    "jupyter.enableExtendedKernelCompletions": true,
    "jupyter.exportWithOutputEnabled": true,
    "terminal.integrated.defaultProfile.windows": "PowerShell",
    "notebook.find.scope": {
        "notebook.experimental.useMarkdownRenderer": true,
        "markupSource": true,
        "markupPreview": true,
        "codeSource": true,
        "codeOutput": true
    },
    "editor.fontFamily": " Consolas, 'Courier New', monospace",
    "files.insertFinalNewline": true,
    "notebook.lineNumbers": "on",
    "files.trimTrailingWhitespace": true,
    "[html]": {
        "editor.defaultFormatter": "vscode.html-language-features"
        // "editor.defaultFormatter": "esbenp.prettier-vscode"

    },
    "prettier.tabWidth": 4,

    "editor.formatOnSave": true,
    "[css]": {
        "editor.defaultFormatter": "vscode.css-language-features"
    },
    "liveServer.settings.donotShowInfoMsg": true,
    "editor.defaultFormatter": "ms-python.black-formatter",


}
